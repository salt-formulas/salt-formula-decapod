
{%- set source_engine = salt['pillar.get']('decapod:server:source:engine') %}

{%- load_yaml as base_defaults %}
{%- if source_engine == 'git' %}
Debian:
  pkgs:
  - python-psycopg2
  dir:
    base: /srv/decapod/venv
    home: /var/lib/decapod
    workspace: /srv/decapod/workspace
RedHat:
  pkgs:
  - python-psycopg2
  dir:
    base: /srv/decapod/venv
    home: /var/lib/decapod
    workspace: /srv/decapod/workspace
{%- else %}
Debian:
  pkgs:
  - decapod
  dir:
    base: /usr/lib/decapod
{%- endif %}
{%- endload %}

{%- set server = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('decapod:server')) %}
